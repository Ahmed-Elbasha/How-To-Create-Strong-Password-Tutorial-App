<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.ahmedelbasha.howtocreatestrongpasswordtutorial.MainActivity">>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/tutorial_image"
            android:scaleType="centerCrop"
            android:id="@+id/tutorial_image_view"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How To Create Strong Password Tutorial"
            android:layout_below="@id/tutorial_image_view"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:id="@+id/tutorial_main_heading"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Creating a strong password can seem like an afterthought when you sign up for new accounts online. But with the prevalence of identity fraud—there’s a victim every two secondsFootnote 1—taking the time to generate a strong password is more important than ever. Here are five tips to get you started."
            android:layout_below="@id/tutorial_main_heading"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:id="@+id/tutorial_main_description"
            android:layout_marginBottom="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="#03A9F4"
            android:textColor="@android:color/white"
            android:id="@+id/start_button"/>

    </RelativeLayout>

